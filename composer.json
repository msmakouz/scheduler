{
  "name": "spiral-packages/scheduler",
  "description": "The scheduler is a package for spiral framework. It will help to managing scheduled tasks on your server.",
  "keywords": [
    "spiral-packages",
    "spiral",
    "scheduler"
  ],
  "homepage": "https://github.com/spiral-packages/scheduler",
  "license": "MIT",
  "authors": [
    {
      "name": "butschster",
      "email": "butschster@gmail.com",
      "role": "PHP web developer"
    }
  ],
  "require": {
    "php": "^8.0",
    "butschster/cron-expression-generator": "^1.10",
    "nesbot/carbon": "^2.56",
    "psr/event-dispatcher": "^1",
    "spiral/cache": "^2.9",
    "spiral/queue": "^2.9",
    "spiral/snapshots": "^2.9",
    "spiral/attributes": "^2.9",
    "symfony/process": "^6.0"
  },
  "require-dev": {
    "spiral/framework": "^2.9",
    "mockery/mockery": "^1.5",
    "phpunit/phpunit": "^9.5",
    "spiral/testing": "^1.0",
    "vimeo/psalm": "^4.9"
  },
  "autoload": {
    "psr-4": {
      "Spiral\\Scheduler\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spiral\\Scheduler\\Tests\\App\\": "tests/app",
      "Spiral\\Scheduler\\Tests\\": "tests/src"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm --config=psalm.xml ./src"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "spiral/composer-publish-plugin": true
    }
  },
  "extra": {
    "spiral": {
      "bootloaders": [
        "Spiral\\Scheduler\\SchedulerBootloader"
      ]
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
